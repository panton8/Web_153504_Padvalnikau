@page
@model Web_153504_Padvalnikau.Areas.Admin.Pages.Sneakers.DetailsModel

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Sneaker</h4>
    <hr />
    <table class="table">
        <tbody>
        <tr>
            <th scope="row">Name</th>
            <td>@Model.Sneaker.Name</td>
        </tr>
        <tr>
            <th scope="row">Description</th>
            <td>@Model.Sneaker.Description</td>
        </tr>
        <tr>
            <th scope="row">Price</th>
            <td>@Model.Sneaker.Price</td>
        </tr>
        <tr>
            <th scope="row">Image</th>
            <td>
                <img src="@Model.Sneaker.Image" />
            </td>
        </tr>
        <tr>
            <th scope="row">Category</th>
            <td>@Model.Sneaker.CategoryId</td>
        </tr>
        </tbody>
    </table>
</div>
<div>
    <a asp-page="./Edit"
       class="btn btn-sm btn-outline-dark"
       asp-route-id="@Model.Sneaker?.Id">
        Edit
    </a>
    <div>
        <a class="btn btn-sm btn-outline-dark"
           asp-page="Index">
            <i class="fa-solid fa-arrow-left text-white"></i>
            Back to list
        </a>
    </div>

</div>