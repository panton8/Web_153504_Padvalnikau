@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{
 ViewBag.Title = "Index";
}

@model SelectList


<main class="container">
 <h1>@ViewData["LabNum"]</h1>
 <h2>Список</h2>
 <ol type="A">
  @for(int i = 0; i < ViewBag.List.Count; i++){
     <li>@ViewBag.List[i]</li>
    }
 </ol>
 <h2>Форма</h2>
 <form action="" method="post">
  <div class="col-sm-10 offset-sm-2">
   <select class="form-select" name="selDemo" asp-items="Model"></select>
  </div>
  <br />
  <div class="col-sm-10 offset-sm-2">
  <input type="radio" name="rad" value="rad1" checked>Радио-1
  <input type="radio" name="rad" value="rad2" checked>Радио-2
  <input type="radio" name="rad" value="rad3" checked>Радио-3
  </div>

  <div class="row mb-3">
   <label for="inputLogin" class="col-sm-2 col-form-label">Логин</label>
   <div class="col-sm-10">
    <input type="login" class="form-control" id="inputLogin">
   </div>
  </div>
  <div class="row mb-3">
   <label for="inputPassword" class="col-sm-2 col-form-label">Пароль</label>
   <div class="col-sm-10">
    <input type="password" class="form-control" id="inputPassword">
   </div>
  </div>
  <button type="submit" class="btn btn-primary">Отправить</button>
 </form>
</main>